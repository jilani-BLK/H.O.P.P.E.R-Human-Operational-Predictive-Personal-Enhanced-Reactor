# Configuration environnement HOPPER

# Orchestrateur
ORCHESTRATOR_PORT=5000
ORCHESTRATOR_HOST=0.0.0.0
LOG_LEVEL=INFO

# Module LLM
LLM_SERVICE_PORT=5001
LLM_MODEL_PATH=/data/models/llama-2-13b-instruct.gguf
LLM_CONTEXT_SIZE=8192
LLM_GPU_LAYERS=30
LLM_THREADS=8

# Module d'exécution système
SYSTEM_EXECUTOR_PORT=5002

# Module STT (Speech-to-Text)
STT_SERVICE_PORT=5003
STT_MODEL=whisper-medium
STT_LANGUAGE=fr

# Module TTS (Text-to-Speech)
TTS_SERVICE_PORT=5004
TTS_VOICE=fr-FR

# Module d'identification
AUTH_SERVICE_PORT=5005
AUTH_CONFIDENCE_THRESHOLD=0.85

# Base de données
DB_PATH=/data/hopper.db
VECTOR_DB_PATH=/data/vector_store

# ============================================
# SECURITY - API Authentication & Rate Limiting
# ============================================
# Token API pour protéger les endpoints (IMPORTANT!)
API_TOKEN=your_secret_api_token_here_change_this_in_production

# Mode développement (désactive auth si true)
DEV_MODE=false

# Rate limiting (requêtes max par IP)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Fichier tokens additionnels (optionnel, un token par ligne)
# API_TOKENS_FILE=/data/config/api_tokens.txt

# Neo4j (Phase 3.5 - GraphRAG)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here  # ⚠️ CHANGE THIS!

# Sécurité
ENABLE_VOICE_AUTH=true
ENABLE_FACE_AUTH=false
REQUIRE_2FA_FOR_CRITICAL=true

# Mode
OFFLINE_MODE=false
DEBUG_MODE=false
